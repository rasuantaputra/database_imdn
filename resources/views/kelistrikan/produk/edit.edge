<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    
    <link href="bppt.png" rel="shortcut icon" type="image/vnd.microsoft.icon">
    <link href="bppt.png" rel="apple-touch-icon">
    
    <title>Data Produk</title>
</head>

<body style="background-color: #2b579a;">

    <div class="container" style="margin-top: 80px">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 style="font-family: 'Montserrat', sans-serif; font-weight: bold">Edit Data Produk</h5>
                    </div>
                    <div class="card-body">
                        <form action="{{ route('kelistrikan.produk.update', {id: produk.id}) }}" method="POST">
                            {{ csrfField() }}
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Pilih Perusahaan</label>
                                <select class="form-control" name="perusahaan_kelistrikan_id"
                                    id="exampleFormControlSelect1">
                                    @each(perusahaan in perusahaans)
                                    <option value="{{ perusahaan.id }}">{{ perusahaan.nama_perusahaan }}</option>
                                    @endeach
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="exampleFormControlSelect1">Pilih Jenis Produk</label>
                                <select class="form-control" name="jenisProduk_kelistrikan_id"
                                    id="exampleFormControlSelect1">
                                    @each(jenisproduk in jenisproduks)
                                    <option value="{{ jenisproduk.id }}">{{ jenisproduk.jenis_produk }}</option>
                                    @endeach
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Merek / Tipe</label>
                                <textarea class="form-control" name="merekTipe"
                                    placeholder="Masukkan Merek / Tipe">{{ produk.merekTipe }}</textarea>
                            </div>
                            <div class="form-group">
                                <label>Spesifikasi</label>
                                <textarea class="form-control" name="spesifikai"
                                    placeholder="Masukkan Spesifikasi">{{ produk.spesifikai }}</textarea>
                                <div class="form-group">
                                    <label>TKDN</label>
                                    <input class="form-control" type="text" value="{{ produk.tkdn }}" name="tkdn"
                                        placeholder="Masukkan Nilai TKDN">
                                </div>

                                <div class="form-group">
                                    <label>No Sertifikat</label>
                                    <input class="form-control" type="text" value="{{ produk.no_sertifikat }}"
                                        name="no_sertifikat" placeholder="Masukkan No Sertifikat">
                                </div>
                                <label>Tanggal</label>
                                <input class="form-control" type="text" value="{{ produk.tanggal }}" name="tanggal"
                                    placeholder="Masukkan Tanggal Sertifikat">
                            </div>
                            <div class="form-group">
                                <label>Hasil Produksi</label>
                                <input class="form-control" type="text" value="{{ produk.hasil_produksi }}"
                                    name="hasil_produksi" placeholder="Masukkan Hasil Produksi">
                            </div>

                            <div class="form-group">
                                <label>Kode HS</label>
                                <input class="form-control" type="text" value="{{produk.kode_hs }}" name="kode_hs"
                                    placeholder="Masukkan Kode HS">
                            </div>
                            <div class="form-group">
                                <label>No Referensi</label>
                                <input class="form-control" type="text" value="{{produk.no_referensi }}" name="no_referensi"
                                    placeholder="No Referensi">
                            </div>
                            <div class="form-group">
                                <label>Verivikator</label>
                                <input class="form-control" type="text" value="{{produk.verivikator }}"
                                    name="verivikator" placeholder="Verivikator">
                            </div>

                              
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Simpan</button>
                                </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>

</html>